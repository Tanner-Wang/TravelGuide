<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.travelguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_travel"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_travel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HotelActivity"
            android:configChanges="orientation|keyboardHidden|"
            android:label="@string/hotel"/>

        <activity android:name=".AttractionActivity"
            android:configChanges="orientation|keyboardHidden|"
            android:label="@string/attraction" />

        <activity android:name=".ShoppingActivity"
            android:configChanges="orientation|keyboardHidden|"
            android:label="@string/shopping"/>

        <activity android:name=".FoodActivity"
            android:configChanges="orientation|keyboardHidden|"
            android:label="@string/food"/>
    </application>

</manifest>
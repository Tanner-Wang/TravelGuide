<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shopping_list_image"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size"
        android:paddingBottom="@dimen/list_image_padding"
        android:paddingEnd="@dimen/list_image_padding"
        android:paddingTop="@dimen/list_image_padding"
        android:scaleType="center" />

    <RelativeLayout
        android:id="@+id/information_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@android:color/white"
        android:paddingBottom="@dimen/list_item_standard_padding"
        android:paddingStart="@dimen/list_item_standard_padding">

        <TextView
            android:id="@+id/shopping_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingBottom="@dimen/little_title_marginBottom"
            android:fontFamily="sans-serif-height"
            android:textSize="@dimen/list_item_title_textSize" />

        <TextView
            android:id="@+id/shopping_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shopping_name"
            android:layout_alignParentStart="true"
            android:text="@string/shopping_tuijian"
            android:textSize="@dimen/list_item_littleTitle_textSize" />

        <TextView
            android:id="@+id/shopping_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/shopping_recommend"
            android:layout_below="@id/shopping_name"
            android:background="@drawable/textviewstyle"
            android:textColor="@android:color/white"
            android:textSize="@dimen/list_item_littleTitle_textSize" />

        <TextView
            android:id="@+id/coordinate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/shopping_zuobiao"
            android:layout_below="@id/shopping_evaluation"
            android:textSize="@dimen/list_item_littleTitle_textSize" />

        <TextView
            android:id="@+id/shopping_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/coordinate"
            android:layout_below="@id/shopping_evaluation"
            android:textSize="@dimen/list_item_littleTitle_textSize" />

    </RelativeLayout>

</LinearLayout>
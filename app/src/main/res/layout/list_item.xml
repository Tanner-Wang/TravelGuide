<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/list_image"
        android:layout_width="@dimen/list_image_size"
        android:layout_height="@dimen/list_image_size" 
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/information_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_title_textSize"
            android:gravity="center"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/list_item_littleTitle_textSize"
            android:layout_alignParentBottom="true"/>


    <ImageView
        android:id="@+id/phone_call"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/list_phone_call_image_size"
        android:layout_height="@dimen/list_phone_call_image_size" />

</RelativeLayout>

</LinearLayout>